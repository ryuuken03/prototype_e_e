<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearAccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".module.md.DetailMerchantActivity">
    <include android:id="@+id/toolbar" layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_default">
                <LinearLayout
                    android:id="@+id/linearImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorGrey">
                    <ImageView
                        android:id="@+id/imageMerchant"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/label0"
                    android:layout_below="@+id/linearImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_margin="5dp"
                    android:text="@string/text_name_merchant"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/icon0"
                    android:layout_below="@+id/label0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_front_store"
                    android:tint="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/nameMerchant"
                    android:layout_toRightOf="@+id/icon0"
                    android:layout_below="@+id/label0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/label1"
                    android:layout_below="@+id/icon0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_margin="5dp"
                    android:text="@string/text_name_owner"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/icon1"
                    android:layout_below="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/ownerMerchant"
                    android:layout_below="@+id/label1"
                    android:layout_toRightOf="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/label2"
                    android:layout_below="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_margin="5dp"
                    android:text="@string/text_no_phone"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/icon2"
                    android:layout_below="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_call_white_24dp"
                    android:tint="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/phoneMerchant"
                    android:layout_below="@+id/label2"
                    android:layout_toRightOf="@+id/icon2"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/label3"
                    android:layout_below="@+id/icon2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_margin="5dp"
                    android:text="@string/text_adddress_merchant"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/icon3"
                    android:layout_below="@+id/label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_place_white_24dp"
                    android:tint="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/addressMerchant"
                    android:layout_below="@+id/label3"
                    android:layout_toRightOf="@+id/icon3"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonLocation"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_normal"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_background_primary"
            android:layout_margin="5dp"
            android:text="@string/text_look_location" />
        <Button
            android:id="@+id/buttonCheckIn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_normal"
            android:textColor="@color/colorWhite"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_background_primary"
            android:text="Check In" />
    </LinearLayout>

</LinearLayout>